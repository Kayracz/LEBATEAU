      <!-- IF THERE IS NO BOATS -->
      <% if boats.empty? %>
        <div class='boats-taken text-center'>
          <p>Sorry, all boats for this category are taken!</p>
          <%= image_tag("titanic")%>
        </div>
      <% end %>
      <!-- IF THERE -->
      <% boats.each do |boat| %>
        <%= link_to boat_path(boat) do %>
          <% if boat.photo.present? %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path boat.photo %>');">
          <% else %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_tag("pyyi0a6yphaudutusmcr")%>');">
          <% end %>
            <div class="card-description">
              <h2><%= boat.name %></h2>
              <p><%= boat.boat_type %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="hidden-xs col-sm-5" style="padding: 0;">
      <!-- MAP -->
      <div
      id="map"
      style="width: 100%;
      height: 60vh;"
      data-markers="<%= @markers.to_json %>"
      ></div>
    </div>
