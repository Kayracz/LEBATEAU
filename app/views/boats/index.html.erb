<!-- Banner -->

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,0,0,0.6) 60%), url('<%= image_path 'bestallstackboatpictures.jpg'%>');">


  <!-- Banner content -->
  <div class="col-xs-12 col-sm-12 col-md-12">
    <div class="row">
      <div class="banner-content">

       <!-- Banner content -->
       <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="row">
          <div class="banner-content">
            <div class="form-wrapper" style="width: 200px; margin: 0 auto;">

             <h2> Pick a Boat Date!</h2>

             <%= form_for :search, method: "get" do |f| %>
             <%= f.date_field :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>

             <%= f.date_field :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
             <br><br>

             <h2>Boat type</h2>

             <form action="/action_page.php">
              <select name="cars">
                <option value="volvo">Yacht</option>
                <option value="saab">Sailboat</option>
                <option value="fiat">Canoe</option>
                <option value="audi">Launch</option>
              </select>
              <br><br>
            </form>
            <%= f.submit "Go", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

</div>
</div>
</div>
