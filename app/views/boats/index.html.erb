<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->

  <div class="carousel-inner">
    <div class="item active">
      <img src='<%= image_path 'cloudboatcopy.jpg' %>'>
      <div class="carousel-caption">
       <h1>Rent a boat, Â¡Easy & Safe!</h1>
       <h2>Your best choice!</h2>
     </div>
   </div>

   <div class="item">
    <img src='<%= image_path 'lastcanoe.jpg' %>'>
    <div class="carousel-caption">
     <h1> More than 1,000 boats to rent at the best price around Buenos Aires!</h1>
   </div>
 </div>


 <div class="item">
  <img src='<%= image_path 'Aoceanboats.jpg' %>'>
  <div class="carousel-caption">
   <h2>Have a Happy cruising!</h2>
 </div>
</div>
</div>

<!-- Left and right controls -->
<a class="left carousel-control" href="#myCarousel" data-slide="prev">
  <span class="glyphicon glyphicon-chevron-left"></span>
  <span class="sr-only">Previous</span>
</a>
<a class="right carousel-control" href="#myCarousel" data-slide="next">
  <span class="glyphicon glyphicon-chevron-right"></span>
  <span class="sr-only">Next</span>
</a>
</div>



<!-- Banner -->

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,0,0,0.6) 60%), url('<%= image_path 'bestallstackboatpictures.jpg'%>');">


  <!-- Banner content -->
  <div class="col-xs-12 col-sm-12 col-md-12">
    <div class="row">
      <div class="banner-content">

        <div class="wrap">
         <div class="search">
          <h2> Search for your boat!</h2>
          <input type="text" class="searchTerm" placeholder="">
          <button type="submit" class="searchButton">
            <i class="fa fa-search"></i>
          </button>


        </div>
      </div>
    </div>
  </div>
</div>
</div>


<span> <h3> <strong>O</strong>ur <strong>b</strong>oats </h3></span>

<!-- cards -->
<div class= "container">
  <div class="row">
    <% @boats.each do |boat| %>
    <div class="col-xs-12 col-sm-6 col-md-3">

      <%= link_to boat_path(boat) do %>
      <% if boat.photo.present? %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path boat.photo %>');">

       <% else %>
       <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_tag("pyyi0a6yphaudutusmcr")%>');">
         <% end %>

         <div class="card-category"></div>
         <div class="card-description">
          <h2><%= boat.name %></h2>
          <p><%= boat.boat_type %></p>
        </div>
        <!--profile user change in each card
        <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large">
      -->
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
</div>




<!-- footer -->
</div>
