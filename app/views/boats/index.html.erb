<!-- Banner -->

<div class="banner">

  <!-- Banner content -->
  <div id="banner-content">
    <div>
      <p>Search for your favourite boat!</p>
    </div>
    <div>
      <%= form_with url: root_path, method: :get, local: true do |f| %>
      <%= f.select :boat_type,
      options_for_select(Boat::BOAT_TYPE.map { |value| [value, value]}, selected: params[:boat_type])
      %>
      <%= f.submit "Filter" %>
      <% end %>
    </div>
  </div>
</div>

<div class="section" id="searchfunction">
  <span> <h3> <strong>O</strong>ur <strong>b</strong>oats </h3></span>
</div>

<!-- cards -->
<div class="container" id="bubble-container">
  <div class="bubble">
    <a href="">
      <img src='<%= image_path 'boat (1).png' %>'/>
    </a>
  </div>
</div>

<div class= "container" id="boat-index">
  <div class="row">
      <!-- CARDS -->
    <div class="col-xs-12 col-sm-7 boats-cards">
      <!-- IF THERE IS NO BOATS -->
      <% if @boats.empty? %>
        <div class='boats-taken text-center'>
          <p>Sorry, all boats for this category are taken!</p>
          <%= image_tag("titanic")%>
        </div>
      <% end %>
      <!-- IF THERE IS BOATS -->
      <% @boats.each do |boat| %>
        <%= link_to boat_path(boat) do %>
          <% if boat.photo.present? %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path boat.photo %>');">
          <% else %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_tag("pyyi0a6yphaudutusmcr")%>');">
          <% end %>
            <div class="card-description">
              <h2><%= boat.name %></h2>
              <p><%= boat.boat_type %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="hidden-xs col-sm-5" style="padding: 0;">
      <!-- MAP -->
      <div
      id="map"
      style="width: 100%;
      height: 60vh;"
      data-markers="<%= @markers.to_json %>"
      ></div>
    </div>
  </div>
</div>

