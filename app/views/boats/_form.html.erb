<% simple_form_for (@boat) do |f| %>
<%= f.label :name, 'Boat name' %>
<%= f.text_field :name%>
<%= f.label :boat_type, "Type"%>
<%= f.text_field :boat_type %>
<%= f.label :size, "Size"%>
<%= f.association :size %>
<%= f.label :capacity, "Capacity"%>
<%= f.text_field :capacity %>
<%= f.label :price, "Price / daily"%>
<%= f.text_field :price%>
<%= f.input :photo %>
<%= f.input :photo_cache, as: :hidden %>
<%= f.submit class= "btn btn-primary lg"%>
<% end %>
