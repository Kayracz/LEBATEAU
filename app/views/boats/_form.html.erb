
<%= simple_form_for @boat do |f| %>
  <%= f.input :name %>
  <%= f.input :boat_type, collection: Boat::BOAT_TYPE %>
  <%= f.input :size %>
  <%= f.input :capacity %>
  <%= f.input :price %>
  <%= f.input :description, as: :text %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit %>
<% end %>
