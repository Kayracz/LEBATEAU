<div class = 'wrapper'>
  <div class = 'container'>

    <img id="tick" src="https://res.cloudinary.com/deruwllkv/image/upload/v1542141008/ijsgysweef7iiagibbbm.svg" alt="confirmation tick">

    <p><strong>Booking confirmed</strong></p>

    <p>Boat name:</p>
    <p class='black'><%= @booking.boat.name %></p>

    <p>Start date:</p>
    <p class='black'><%= @booking.start_date.change({ hour: 9, min: 0}) %></p>

    <p>End date:</p>
    <p class='black'><%= @booking.end_date.change({ hour: 17, min: 0}) %></p>

    <!-- <p><%= link_to "Back to home", root_path %></p> -->
    <a class="btn btn-primary" href= <%= boat_path(@booking.boat) %> >See boat details</a>
    <!-- <a class="btn btn-primary" href= <%= root_path %> >Back to home</a> -->
  </div>
</div>


